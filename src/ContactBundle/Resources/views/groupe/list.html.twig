{% extends "PostBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-10 col-lg-offset-1">
        <div class="page-header">
            <h1>Liste des groupes :</h1>
        </div>
    </div>
    <div class="well col-lg-12 container">
        <table class="table table-striped">
            {% if groupes|length > 0  %}
                <thead>
                <tr>
                    <th>Nom du groupe</th>
                    <th>Utilisateurs</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for groupe in groupes %}
                    <tr>
                        <td>{{ groupe.name }}</td>
                        <td>
                            <span class="label label-default">
                                {{ groupe.users|length }}
                            </span>
                        </td>
                        <td>
                            <div class="col-lg-1">
                                <a href="{{ path('contact_groupe_detail', {'id': groupe.id}) }}">
                                    <span class="glyphicon glyphicon-eye-open btn btn-default btn-xs"></span>
                                </a>
                            </div>
                            <div class="col-lg-1">
                                <a href="{{ path('contact_left_groupe', {'id': groupe.id}) }}">
                                    <span class="glyphicon glyphicon-minus btn btn-warning btn-xs"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% else %}
                <br>
                <div class="alert alert-dismissable alert-info">
                    Vous ne faites partie d'aucun groupe pour le moment.
                </div>
            {% endif %}
        </table>
    </div>
{% endblock content %}