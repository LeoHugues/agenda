{% extends "PostBundle::layout.html.twig" %}

{% block content %}
    <div class="well col-lg-12 container">
        <div class="row">
            <div class="col-xs-5 pull-left">
                <h2 class="col-xs-10">Liste de vos amis :</h2>
            </div>
        </div>
        <table class="table table-striped">
            {% if users|length > 0  %}
                <thead>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <div class="col-lg-1">
                                <a href="{{ path('contact_remove_friend', {'id': user.id}) }}">
                                    <span class="glyphicon glyphicon-remove btn btn-warning btn-xs"></span>
                                </a>
                            </div>
                            <div class="col-lg-1">
                                <a href="{{ path('user_read', {'id': user.id}) }}">
                                    <span class="glyphicon glyphicon-eye-open btn btn-default btn-xs"></span>
                                </a>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% else %}
                <br>
                <div class="alert alert-dismissable alert-info">
                    Aucun utilisateurs en base
                </div>
            {% endif %}
        </table>
    </div>
{% endblock content %}